import pygame
import sys

# Inicializa o pygame
pygame.init()

# Define as dimensões da janela
screen_width = 800
screen_height = 600

# Cria a tela
screen = pygame.display.set_mode((screen_width, screen_height))

# Carrega a textura
texture = pygame.image.load("grass.jpg")

# Define as coordenadas do chão
chao = [(0, 400), (0, 600), (800, 600), (800, 400)]

# Define as coordenadas da textura
texture_coords = [(0, 0), (0, 1), (1, 1), (1, 0)]

# Desenha o polígono com a textura
pygame.draw.polygon(screen, (255, 255, 255), chao)

# Atualiza a tela
pygame.display.update()

# Loop principal do jogo
while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()
